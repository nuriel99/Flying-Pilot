<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#249ff0</item>
        <item name="android:textColor">#111111</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:topRightRadius">10dp</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:topLeftRadius">10dp</item>
        <item name="android:bottomLeftRadius">10dp</item>
    </style>


    <style name="AppTheme.HOME_BUTTON" parent="Widget.AppCompat.ActionButton">
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginStart">110dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="AppTheme.MenuButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

</resources>